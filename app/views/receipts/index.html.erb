<h1>Listing receipts</h1>

<table>
  <tr>
    <th>Used</th>
    <th>Buyer name</th>
    <th>Buyer telephone</th>
    <th>Barcode</th>
    <th>Code</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @receipts.each do |receipt| %>
  <tr>
    <td><%= receipt.used %></td>
    <td><%= receipt.buyer_name %></td>
    <td><%= receipt.buyer_telephone %></td>
    <td><%= receipt.barcode %></td>
    <td><%= receipt.code %></td>
    <td><%= link_to 'Show', receipt %></td>
    <td><%= link_to 'Edit', edit_receipt_path(receipt) %></td>
    <td><%= link_to 'Destroy', receipt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

